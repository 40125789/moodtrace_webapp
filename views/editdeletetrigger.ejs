            <div class="shadow p-3 mb-5 bg-white rounded">
                <h1>Edit Contextual Trigger</h1>

                <!-- Display the selected mood card information -->
                <div class="card shadow mb-4">
                    <div class="card-body">
                       
                        <h5 class="card-title">Date and Time: <%= new Date(selectedCardInfo.date_time).toLocaleString() %></h5>
                        <!--<p class="card-text">mood_id: <%= selectedCardInfo.mood_id %></p> -->
                        <p class="card-text">Enjoyment level: <%= selectedCardInfo.enjoyment_level %></p>
                        <p class="card-text">Sadness level: <%= selectedCardInfo.sadness_level %></p>
                        <p class="card-text">Anger level: <%= selectedCardInfo.anger_level %></p>
                        <p class="card-text">Contempt level: <%= selectedCardInfo.contempt_level %></p>
                        <p class="card-text">Disgust level: <%= selectedCardInfo.disgust_level %></p>
                        <p class="card-text">Fear level: <%= selectedCardInfo.fear_level %></p>
                        <p class="card-text">Surprise level: <%= selectedCardInfo.surprise_level %></p>
                
                        <!-- Display Contextual Trigger or show 'None' if it's empty -->
                        <p class="card-text">Contextual Trigger: <%= selectedCardInfo.trigger_name|| '' %></p>
                    </div>
                </div>


<!-- Your edit form goes here -->
<form id="editForm" class="row g-6" method="post" action="/views/editdeletetrigger?trigger=<%= trigger %>&snapshotID=<%= selectedCardInfo.snapshot_id %>">
    <!-- New Contextual Trigger Field -->
    <div class="col-md-6">
        <label for="updatedContextualTrigger" class="form-label">Edit Contextual Trigger:</label>
        <div class="input-group">
            <input type="text" id="updatedContextualTrigger" name="updatedContextualTrigger" class="form-control" value="<%= selectedCardInfo.contextual_trigger !== null ? selectedCardInfo.contextual_trigger : '' %>">
            <!-- Other input fields for editing -->
            <button type="submit" class="btn btn-primary" name="updateTrigger">Save Changes</button>
            <button class="btn btn-danger ms-2" onclick="deleteMood()">Delete Mood</button>
        </div>
    </div>
</form>


<script>
    function deleteMood() {
        if (confirm("Are you sure you want to delete this record?")) {
            var moodId = '<%= selectedCardInfo.snapshot_id %>';
            fetch('/views/deletemood/' + moodId, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                window.location.href = '/history';
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        }
    }
</script>


