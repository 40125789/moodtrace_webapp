<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mood Tracking Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://getbootstrap.com/docs/5.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            margin-bottom: 20px;
        }

        .btn-mood {
            width: 100%;
        }

        .chart-container {
            height: 300px;
            margin-top: 20px;
        }
    </style>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mood Chart</h5>
                        <div class="chart-container">
                            <canvas id="moodChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Chart.js configuration
        var ctx = document.getElementById('moodChart').getContext('2d');
        var moodData = {
            labels: [],
            datasets: [{
                label: 'Mood Tracking',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1,
                data: []
            }]
        };

        var moodChart = new Chart(ctx, {
            type: 'line',
            data: moodData,
            options: {
                scales: {
                    x: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Date'
                        }
                    }],
                    y: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Mood Level'
                        }
                    }]
                }
            }
        });

        // Function to add data to the chart
        function addData() {
            var currentMood = document.getElementById('currentMood').value;
            var currentDate = new Date().toLocaleDateString();

            // Add data to the chart
            moodData.labels.push(currentDate);
            moodData.datasets[0].data.push(currentMood);

            // Update the chart
            moodChart.update();
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-eJqfF8j5lL+yoF8j6Z/z9n6oZ7EjaTlkkVYFIqP61Z4vL3OFLD1u1KlLIh9dQNO"
        crossorigin="anonymous"></script>
</body>

</html>
