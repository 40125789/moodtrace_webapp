<body>
    <!-- Record Mood page -->
    <section class="bg-light text-dark p-5 text-center text-sm-start">
        <div class="container mt-3 d-flex justify-content-center align-items-center"> <!-- Adjust top margin to move the form up and use flexbox -->
            <div class="form-container shadow p-5 mb-3" style="max-width: 600px;"> <!-- Adjust maximum width -->
